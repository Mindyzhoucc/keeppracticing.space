    <script>
        const games = {
            'wordle': {
                url: 'https://www.nytimes.com/games/wordle/index.html',
                title: '📝 Wordle - Daily Word Puzzle Phenomenon',
                description: 'Wordle is THE viral word game that took the world by storm! Guess the 5-letter word in 6 tries. With over 300 million players worldwide, it\'s the most talked-about puzzle game. Simple rules, addictive gameplay, and social sharing make it a global phenomenon!'
            },
            'slither-io': {
                url: 'https://slither.io/',
                title: '🐍 Slither.io - Multiplayer Snake Battle',
                description: 'Slither.io is the modern evolution of the classic Snake game! Control your snake to eat glowing orbs and grow longer while avoiding other snakes. Trap opponents and eat their remains to become the longest snake. Fast-paced multiplayer action that\'s incredibly addictive!'
            },
            'flappy-bird': {
                url: 'https://flappybird.io/',
                title: '🐦 Flappy Bird - Pixel Bird Flying Challenge',
                description: 'Flappy Bird, the globally viral casual game! Control the little bird through green pipes by simply tapping the screen to make it fly. Looks simple but extremely difficult, requiring perfect timing. Although the gameplay is simple, it\'s absolutely addictive and will challenge your patience and focus!'
            },
            'paper-io': {
                url: 'https://paper-io.com/',
                title: '📄 Paper.io - Territory Conquest Game',
                description: 'Paper.io is an addictive territory conquest game! Draw lines to capture new areas while protecting your base. Be careful not to hit your own trail or get eliminated by other players. Strategy meets quick reflexes in this colorful multiplayer experience!'
            },
            'krunker-io': {
                url: 'https://krunker.io/',
                title: '🔫 Krunker.io - Fast-Paced FPS Battle',
                description: 'Krunker.io is a fast-paced, pixelated first-person shooter that runs smoothly in your browser! Choose from different classes, customize your weapons, and battle players from around the world. With its crisp graphics and responsive controls, it\'s one of the best browser FPS games!'
            },
            'diep-io': {
                url: 'https://diep.io/',
                title: '🎯 Diep.io - Tank Evolution Battle',
                description: 'Diep.io is an awesome tank battle game! Start as a basic tank and evolve into powerful war machines by shooting geometric shapes and other players. Upgrade your stats, choose different tank classes, and dominate the battlefield. Strategy and skill determine your survival!'
            }
        };

        let currentGame = 'wordle';
        let loadTimeout;

        function loadGame(gameKey) {
            // 更新按钮状态
            document.querySelectorAll('.game-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            currentGame = gameKey;
            const game = games[gameKey];
            
            // 显示加载状态
            document.getElementById('loading').style.display = 'flex';
            document.getElementById('gameFrame').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';

            // 更新游戏信息
            const gameInfo = document.getElementById('gameInfo');
            gameInfo.innerHTML = `<h3>${game.title}</h3><p>${game.description}</p>`;

            // 加载新游戏
            const iframe = document.getElementById('gameFrame');
            iframe.src = game.url;

            // 设置超时检测
            if (loadTimeout) clearTimeout(loadTimeout);
            loadTimeout = setTimeout(() => {
                showError();
            }, 12000);
        }

        function showError() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('gameFrame').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'block';
        }

        function retryLoad() {
            loadGame(currentGame);
        }

        // 监听 iframe 加载完成
        document.getElementById('gameFrame').addEventListener('load', function() {
            if (loadTimeout) clearTimeout(loadTimeout);
            document.getElementById('loading').style.display = 'none';
            document.getElementById('errorMessage').style.display = 'none';
            this.style.display = 'block';
        });

        // 监听 iframe 加载错误
        document.getElementById('gameFrame').addEventListener('error', function() {
            showError();
        });

        // 初始加载
        window.addEventListener('load', function() {
            setTimeout(() => {
                const iframe = document.getElementById('gameFrame');
                if (iframe.src) {
                    iframe.style.display = 'block';
                    document.getElementById('loading').style.display = 'none';
                }
            }, 4000);
        });

        // 键盘快捷键 (1-6)
        document.addEventListener('keydown', function(e) {
            if (e.key >= '1' && e.key <= '6') {
                e.preventDefault();
                const gameKeys = Object.keys(games);
                const index = parseInt(e.key) - 1;
                if (index < gameKeys.length) {
                    const buttons = document.querySelectorAll('.game-btn');
                    if (buttons[index]) {
                        buttons[index].click();
                    }
                }
            }
        });

        // 触摸手势支持
        let touchStartY = 0;
        let touchStartX = 0;
        
        document.addEventListener('touchstart', function(e) {
            touchStartY = e.touches[0].clientY;
            touchStartX = e.touches[0].clientX;
        });

        document.addEventListener('touchend', function(e) {
            const touchEndY = e.changedTouches[0].clientY;
            const touchEndX = e.changedTouches[0].clientX;
            const diffY = touchStartY - touchEndY;
            const diffX = touchStartX - touchEndX;
            
            // 左右滑动切换游戏
            if (Math.abs(diffX) > Math.abs(diffY) && Math.abs(diffX) > 50) {
                const gameKeys = Object.keys(games);
                const currentIndex = gameKeys.indexOf(currentGame);
                
                if (diffX > 0) { // 左滑，下一个游戏
                    const nextIndex = (currentIndex + 1) % gameKeys.length;
                    const buttons = document.querySelectorAll('.game-btn');
                    buttons[nextIndex].click();
                } else { // 右滑，上一个游戏
                    const prevIndex = currentIndex === 0 ? gameKeys.length - 1 : currentIndex - 1;
                    const buttons = document.querySelectorAll('.game-btn');
                    buttons[prevIndex].click();
                }
            }
        });

        // 添加页面可见性检测，优化性能
        document.addEventListener('visibilitychange', function() {
            const iframe = document.getElementById('gameFrame');
            if (document.hidden) {
                // 页面隐藏时暂停iframe（如果游戏支持）
                iframe.style.display = 'none';
            } else {
                // 页面显示时恢复iframe
                iframe.style.display = 'block';
            }
        });
    </script>
</body>
</html>
